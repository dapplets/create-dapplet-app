{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "moduleResolution": "Node",
    "noEmitHelpers": true,
    "esModuleInterop": true,
    // "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    // "module": "ES2015",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "assets",
    "node_modules",
    "bower_components",
    "jspm_packages"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
